{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "cargo"
      ],
      "enabled": true,
      "rangeStrategy": "pin"
    },
    {
      "matchManagers": [
        "github-actions",
        "dockerfile"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "groupName": "Rust toolchain",
      "matchDatasources": ["docker", "mise"],
      "matchPackagePatterns": ["^rust$"]
    }
  ]
}
