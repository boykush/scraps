{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "minimumReleaseAge": "1 day",
  "packageRules": [
    {
      "matchManagers": [
        "cargo"
      ],
      "enabled": true,
      "rangeStrategy": "pin"
    },
    {
      "groupName": "Rust toolchain",
      "matchManagers": ["dockerfile", "mise"],
      "matchPackageNames": ["rust"]
    }
  ]
}
